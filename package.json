{
  "name": "leadgrabr-api",
  "version": "1.0.0",
  "description": "API for leadgrabr",
  "author": "Kareem Janoudi <kareem.janoudi@leadgrabr.com>",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "5.10.1",
    "npm": "3.3.x"
  },
  "scripts": {
    "start": "npm run start-prod",
    "start-prod": "better-npm-run start-prod",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-server",
    "deploy": "npm run build && eb deploy",
    "dev": "better-npm-run start-dev",
    "debug": "better-npm-run start-debug",
    "lint": "eslint -c .eslintrc src"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./build/index.js",
      "env": {
        "NODE_ENV": "production",
        "NODE_PATH": "build"
      }
    },
    "start-debug": {
      "command": "nodemon --exec 'npm run lint && npm run build && node --debug ./build/index.js'",
      "env": {
        "NODE_ENV": "development",
        "MONGO_HOST": "ec2-54-84-242-122.compute-1.amazonaws.com",
        "MONGO_DBNAME": "leadgrabr-dev",
        "MONGO_USER": "leadgrabr-dev",
        "NODE_PATH": "src",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "nodemon --exec 'npm run lint && babel-node ./src/index.js'",
      "env": {
        "NODE_ENV": "development",
        "MONGO_HOST": "ec2-54-84-242-122.compute-1.amazonaws.com",
        "MONGO_DBNAME": "leadgrabr-dev",
        "MONGO_USER": "leadgrabr-dev",
        "NODE_PATH": "src",
        "PORT": 3000
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:LeadGrabr/api.git"
  },
  "keywords": [],
  "dependencies": {
    "babel-runtime": "^6.3.19",
    "better-npm-run": "0.0.8",
    "bluebird": "^3.3.5",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "concurrently": "*",
    "cookie-parser": "^1.4.1",
    "cors": "^2.7.1",
    "debug": "^2.2.0",
    "email-templates": "^2.3.0",
    "express": "^4.13.4",
    "express-restify-mongoose": "^4.0.1",
    "express-validation": "^0.6.0",
    "express-winston": "^1.3.0",
    "http-status": "^0.2.1",
    "jade": "^1.11.0",
    "joi": "^8.0.5",
    "lg-joigoose": "0.0.1",
    "lodash": "^4.10.0",
    "method-override": "^2.3.5",
    "mongoose": "^4.4.12",
    "morgan": "^1.7.0",
    "sendgrid": "^2.0.0",
    "strict-mode": "^0.5.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.6",
    "babel-eslint": "^6.0.2",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-plugin-typecheck": "*",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "commitizen": "^2.7.6",
    "coveralls": "^2.11.6",
    "cz-conventional-changelog": "1.1.5",
    "del": "^2.2.0",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^7.0.0",
    "eslint-plugin-import": "^1.4.0",
    "ghooks": "^1.2.1",
    "isparta": "4.0.0",
    "mocha": "^2.3.4",
    "nodemon": "*",
    "piping": "^0.3.0",
    "run-sequence": "^1.1.5",
    "validate-commit-msg": "^2.5.0"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "issue",
        "master",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime",
      "add-module-exports",
      "transform-decorators-legacy"
    ],
    "env": {
      "development": {
        "plugins": [
          "typecheck"
        ]
      }
    }
  }
}
