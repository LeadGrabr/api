{
  "name": "express-mongoose-es6-rest-api",
  "version": "1.0.0",
  "description": "A Boilerplate application for building REST APIs using express, mongoose in ES6 with code coverage",
  "author": "Kunal Kapadia <kunalkapadia12@gmail.com>",
  "main": "index.js",
  "private": false,
  "engines": {
    "node": "5.10.1",
    "npm": "3.3.x"
  },
  "scripts": {
    "start": "npm run start-prod",
    "start-prod": "better-npm-run start-prod",
    "clean": "rm -rf build && mkdir build",
    "build-server": "babel -d ./build ./src -s",
    "build": "npm run clean && npm run build-server",
    "deploy": "npm run build && eb deploy",
    "dev": "better-npm-run start-dev",
    "debug": "better-npm-run start-debug",
    "lint": "eslint -c .eslintrc src"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node ./build/index.js",
      "env": {
        "NODE_ENV": "production"
      }
    },
    "start-debug": {
      "command": "nodemon --exec 'npm run lint && npm run build && node --debug ./build/index.js'",
      "env": {
        "NODE_ENV": "development",
        "MONGO_HOST": "localhost",
        "MONGO_DBNAME": "leadgrabr-dev",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "nodemon --exec 'npm run lint && babel-node ./src/index.js'",
      "env": {
        "NODE_ENV": "development",
        "MONGO_HOST": "localhost",
        "MONGO_DBNAME": "leadgrabr-dev",
        "PORT": 3000
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:KunalKapadia/express-mongoose-es6-rest-api.git"
  },
  "keywords": [
    "express",
    "node",
    "node.js",
    "mongodb",
    "mongoose",
    "es6",
    "mocha",
    "istanbul",
    "REST",
    "API",
    "boilerplate"
  ],
  "dependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.4",
    "babel-loader": "^6.2.4",
    "babel-plugin-add-module-exports": "^0.1.2",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-plugin-typecheck": "*",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "^6.3.13",
    "babel-runtime": "^6.3.19",
    "better-npm-run": "0.0.7",
    "bluebird": "^3.3.4",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "concurrently": "*",
    "cookie-parser": "^1.4.1",
    "cors": "^2.7.1",
    "debug": "^2.2.0",
    "express": "^4.13.4",
    "express-validation": "^0.5.0",
    "express-winston": "^1.3.0",
    "http-status": "^0.2.1",
    "joi": "^8.0.5",
    "lodash": "^4.8.2",
    "method-override": "^2.3.5",
    "mongoose": "^4.4.11",
    "morgan": "^1.7.0",
    "strict-mode": "^0.5.0",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-eslint": "^6.0.2",
    "chai": "^3.4.1",
    "commitizen": "^2.7.6",
    "coveralls": "^2.11.6",
    "cz-conventional-changelog": "1.1.5",
    "del": "^2.2.0",
    "eslint": "^2.7.0",
    "eslint-config-airbnb": "^6.2.0",
    "eslint-plugin-import": "^1.4.0",
    "ghooks": "^1.2.0",
    "isparta": "4.0.0",
    "mocha": "^2.3.4",
    "nodemon": "*",
    "piping": "^0.3.0",
    "run-sequence": "^1.1.5",
    "validate-commit-msg": "^2.5.0"
  },
  "license": "MIT",
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": ["feat", "fix", "docs", "style", "refactor", "perf", "test", "chore", "revert"], 
      "warnOnFail": false, 
      "maxSubjectLength": 100,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!", 
      "helpMessage": "" 
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime",
      "add-module-exports",
      "transform-decorators-legacy"
    ],
    "env": {
      "development": {
        "plugins": [
          "typecheck"
        ]
      }
    }
  }
}
