{
  "name": "leadgrabr-api",
  "version": "1.0.0",
  "description": "API for leadgrabr",
  "author": "Kareem Janoudi <kareem.janoudi@leadgrabr.com>",
  "main": "index.js",
  "private": true,
  "engines": {
    "node": "5.10.1",
    "npm": "3.3.x"
  },
  "scripts": {
    "start": "npm run start-prod",
    "start-prod": "better-npm-run start-prod",
    "clean": "rm -rf dist && mkdir dist",
    "dump-restore": "better-npm-run dump-dev; better-npm-run restore-prod",
    "build-server": "babel -d ./dist ./src -s; cp -R ./src/services/email/templates ./dist/services/email/templates",
    "build": "npm run clean && npm run build-server",
    "deploy": "npm run build && eb deploy",
    "dev": "better-npm-run start-dev",
    "debug": "better-npm-run start-debug",
    "lint": "eslint -c .eslintrc src"
  },
  "betterScripts": {
    "start-prod": {
      "command": "node --harmony ./dist/index.js",
      "env": {
        "API_URL": "http://api.leadgrabr.com",
        "NODE_ENV": "production",
        "NODE_PATH": "dist"
      }
    },
    "start-debug": {
      "command": "nodemon --watch src --exec 'npm run lint && babel-node --debug ./src/index.js'",
      "env": {
        "API_URL": "http://lgrab.ngrok.io",
        "NODE_ENV": "development",
        "MONGO_HOST": "ec2-54-84-242-122.compute-1.amazonaws.com",
        "MONGO_DBNAME": "leadgrabr-dev",
        "MONGO_USER": "leadgrabr-dev",
        "NODE_PATH": "src",
        "PORT": 3000
      }
    },
    "start-dev": {
      "command": "nodemon --watch src --exec 'npm run lint && babel-node ./src/index.js'",
      "env": {
        "API_URL": "http://lgrab.ngrok.io",
        "NODE_ENV": "development",
        "MONGO_HOST": "ec2-54-84-242-122.compute-1.amazonaws.com",
        "MONGO_DBNAME": "leadgrabr-dev",
        "MONGO_USER": "leadgrabr-dev",
        "NODE_PATH": "src",
        "PORT": 3000
      }
    },
    "dump-dev": {
      "command": "mongodump --host=$MONGO_HOST -d $DEV_MONGO_DBNAME -u $DEV_MONGO_DB_USER -p $DEV_MONGO_PASS --verbose",
      "env": {
        "MONGO_HOST": "ec2-54-84-242-122.compute-1.amazonaws.com",
        "DEV_MONGO_DBNAME": "leadgrabr-dev",
        "DEV_MONGO_DB_USER": "leadgrabr-dev"
      }
    },
    "restore-prod": {
      "command": "mongorestore --host=$MONGO_HOST -d $PROD_MONGO_DBNAME -u $PROD_MONGO_DB_USER -p $PROD_MONGO_PASS --verbose --drop dump/$DEV_MONGO_DBNAME/",
      "env": {
        "MONGO_HOST": "ec2-54-84-242-122.compute-1.amazonaws.com"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:LeadGrabr/api.git"
  },
  "keywords": [],
  "dependencies": {
    "babel-runtime": "^6.3.19",
    "bcrypt-nodejs": "0.0.3",
    "better-npm-run": "0.0.8",
    "bluebird": "^3.3.5",
    "body-parser": "^1.15.0",
    "compression": "^1.6.1",
    "concurrently": "*",
    "cookie-parser": "^1.4.1",
    "cors": "^2.7.1",
    "crypto": "0.0.3",
    "debug": "^2.2.0",
    "email-templates": "^2.3.0",
    "express": "^4.13.4",
    "express-jwt": "^3.3.0",
    "express-restify-mongoose": "^4.0.2",
    "express-validation": "^0.6.0",
    "express-winston": "^1.3.1",
    "http-status": "^0.2.2",
    "jade": "^1.11.0",
    "joi": "^8.0.5",
    "jsonwebtoken": "^6.2.0",
    "lg-joigoose": "0.0.1",
    "lodash": "^4.11.1",
    "method-override": "^2.3.5",
    "mongoose": "^4.4.14",
    "morgan": "^1.7.0",
    "sendgrid": "^2.0.0",
    "source-map-support": "^0.4.0",
    "strict-mode": "^0.5.0",
    "twilio": "^2.9.1",
    "winston": "^2.2.0"
  },
  "devDependencies": {
    "babel-cli": "^6.7.7",
    "babel-core": "^6.7.7",
    "babel-eslint": "^6.0.4",
    "babel-node-debug": "^2.0.0",
    "babel-plugin-syntax-async-functions": "^6.5.0",
    "babel-plugin-transform-async-to-module-method": "^6.7.0",
    "babel-plugin-transform-decorators-legacy": "^1.3.4",
    "babel-plugin-transform-runtime": "^6.3.13",
    "babel-plugin-typecheck": "*",
    "babel-preset-es2015-node6": "*",
    "babel-preset-stage-0": "^6.3.13",
    "babel-preset-stage-1": "^6.5.0",
    "babel-preset-stage-2": "6.5.0",
    "babel-register": "^6.3.13",
    "chai": "^3.4.1",
    "commitizen": "^2.8.1",
    "coveralls": "^2.11.6",
    "cz-conventional-changelog": "^1.1.6",
    "del": "^2.2.0",
    "eslint": "^2.9.0",
    "eslint-config-airbnb": "^8.0.0",
    "eslint-plugin-import": "^1.6.1",
    "ghooks": "^1.2.1",
    "isparta": "4.0.0",
    "mocha": "^2.3.4",
    "node-inspector": "^0.12.8",
    "nodemon": "^1.9.2",
    "piping": "^0.3.1",
    "run-sequence": "^1.1.5",
    "sanitize-filename": "^1.6.0",
    "validate-commit-msg": "^2.6.1"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint",
      "commit-msg": "validate-commit-msg"
    },
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    },
    "validate-commit-msg": {
      "types": [
        "issue",
        "master",
        "revert"
      ],
      "warnOnFail": false,
      "maxSubjectLength": 1000,
      "subjectPattern": ".+",
      "subjectPatternErrorMsg": "subject does not match subject pattern!",
      "helpMessage": ""
    }
  },
  "babel": {
    "presets": [
      "es2015-node6",
      "stage-2",
      "stage-1",
      "stage-0"
    ],
    "plugins": [
      "transform-runtime",
      "syntax-async-functions",
      "transform-decorators-legacy",
      [
        "transform-async-to-module-method",
        {
          "module": "bluebird",
          "method": "coroutine"
        }
      ]
    ],
    "env": {
      "development": {
        "plugins": [
          "typecheck"
        ]
      }
    }
  }
}
